  birthRegistriesAsMother  BirthRegistry[]            @relation("BirthRegistryMother")
  birthRegistriesAsFather  BirthRegistry[]            @relation("BirthRegistryFather")
  birthRegistryAsChild     BirthRegistry?             @relation("BirthRegistryChild")
  assignedAssets           Asset[]
  approvedDisposals        AssetDisposal[]

  @@index([branchId])
  @@index([status])
  @@index([membershipDate])
  @@index([zoneId])
