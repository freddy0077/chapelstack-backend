// ============================================
// ASSET MANAGEMENT MODELS
// ============================================

model AssetType {
  id                      String       @id @default(uuid())
  name                    String
  description             String?
  defaultDepreciationRate Float? // Annual percentage
  category                String? // "FIXED_ASSET", "CURRENT_ASSET", etc.
  icon                    String?
  color                   String?
  customFields            Json? // Type-specific attributes
  organisationId          String
  organisation            Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  assets                  Asset[]
  createdAt               DateTime     @default(now())
  updatedAt               DateTime     @updatedAt

  @@index([organisationId])
  @@index([name])
}

model Asset {
  id                   String             @id @default(uuid())
  assetCode            String             @unique // e.g., "AST-2024-001"
  name                 String
  description          String?
  assetTypeId          String
  assetType            AssetType          @relation(fields: [assetTypeId], references: [id])
  purchaseDate         DateTime?
  purchasePrice        Float?
  currentValue         Float?
  depreciationRate     Float? // Annual percentage
  location             String?
  assignedToMemberId   String?
  assignedToMember     Member?            @relation(fields: [assignedToMemberId], references: [id])
  assignedToDepartment String?
  status               String             @default("ACTIVE") // ACTIVE, IN_MAINTENANCE, DISPOSED, LOST, DAMAGED
  condition            String? // EXCELLENT, GOOD, FAIR, POOR
  warrantyExpiryDate   DateTime?
  supplier             String?
  serialNumber         String?
  modelNumber          String?
  photos               String[]           @default([])
  attachments          String[]           @default([])
  notes                String?
  customData           Json? // Type-specific data
  branchId             String?
  branch               Branch?            @relation(fields: [branchId], references: [id])
  organisationId       String
  organisation         Organisation       @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  disposalRecords      AssetDisposal[]
  maintenanceRecords   AssetMaintenance[]
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([organisationId])
  @@index([branchId])
  @@index([assetTypeId])
  @@index([status])
  @@index([assetCode])
  @@index([assignedToMemberId])
}

model AssetDisposal {
  id                  String       @id @default(uuid())
  assetId             String
  asset               Asset        @relation(fields: [assetId], references: [id])
  disposalDate        DateTime
  disposalMethod      String // SOLD, DONATED, SCRAPPED, LOST, STOLEN, DAMAGED
  disposalReason      String?
  salePrice           Float?
  buyerRecipient      String? // Name of buyer or recipient
  approvedByMemberId  String?
  approvedByMember    Member?      @relation(fields: [approvedByMemberId], references: [id])
  disposalNotes       String?
  bookValueAtDisposal Float?
  gainLossOnDisposal  Float? // salePrice - bookValueAtDisposal
  documents           String[]     @default([])
  branchId            String?
  branch              Branch?      @relation(fields: [branchId], references: [id])
  organisationId      String
  organisation        Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([organisationId])
  @@index([branchId])
  @@index([assetId])
  @@index([disposalDate])
  @@index([disposalMethod])
}

model AssetMaintenance {
  id                  String       @id @default(uuid())
  assetId             String
  asset               Asset        @relation(fields: [assetId], references: [id])
  maintenanceDate     DateTime
  maintenanceType     String // ROUTINE, REPAIR, UPGRADE, INSPECTION
  description         String
  cost                Float?
  performedBy         String? // Vendor or staff name
  nextMaintenanceDate DateTime?
  notes               String?
  documents           String[]     @default([])
  organisationId      String
  organisation        Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([organisationId])
  @@index([assetId])
  @@index([maintenanceDate])
}
